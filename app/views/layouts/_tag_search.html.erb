<% if user_signed_in? %>
  <div class="search_form ml-2">
    <%= form_with url: search_path, local: true,method: :get do |f| %>
      <% tag = Book.select(:tag).distinct %> 
      <%= f.collection_select(:word, tag, :id, :tag) %>
      <%= f.submit "タグ検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>